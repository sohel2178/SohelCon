<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.optimusbs.sohelcon.Fragments.MainFragment.Finance.HeadwiseExpenditureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/finance_list_header"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/rv_head_wise_expenditure">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/my_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/field_height_small"
            android:layout_weight="3.5"
            android:gravity="start|center_vertical"
            android:textStyle="bold"
            android:paddingStart="@dimen/default_padding_left"
            android:text="@string/total"
            android:id="@+id/totalText"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/field_height_small"
            android:layout_weight="2"
            android:gravity="end|center_vertical"
            android:textStyle="bold"
            android:paddingStart="@dimen/default_padding_left"
            android:id="@+id/headwise_expenditure_total"
            />

    </LinearLayout>

    <FrameLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pie_container"
        android:visibility="invisible">

    </FrameLayout>

</LinearLayout>
