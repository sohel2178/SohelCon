<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.optimusbs.sohelcon.Fragments.MainFragment.Store.IndividualStoreItemDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:id="@+id/header">
        <include layout="@layout/store_list_header"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/header"
        android:layout_above="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/rv_individual_store_item">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bottom_section"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/my_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7590CAee"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/field_height_small"
                android:layout_weight="3.5"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:paddingStart="@dimen/default_padding_left"
                android:id="@+id/received"
                android:text="@string/received"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/field_height_small"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:paddingStart="@dimen/default_padding_left"
                android:id="@+id/individual_store_item_received"
                />

        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/my_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50fbee04"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/field_height_small"
                android:layout_weight="3.5"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:paddingStart="@dimen/default_padding_left"
                android:id="@+id/consumed"
                android:text="@string/consumed"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/field_height_small"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:textStyle="bold"
                android:paddingStart="@dimen/default_padding_left"
                android:id="@+id/individual_store_item_consumed"
                />

        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/my_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60ee8B22"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/field_height_small"
                android:layout_weight="3.5"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:paddingStart="@dimen/default_padding_left"
                android:id="@+id/balance"
                android:text="@string/balance"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/field_height_small"
                android:layout_weight="2"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingStart="@dimen/default_padding_left"
                android:id="@+id/individual_store_item_balance"
                />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
