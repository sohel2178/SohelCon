<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/navigation_header_background"
    tools:context="com.cpsdbd.sohelcon.NavigationDrawer">

    <LinearLayout
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:id="@+id/nav_home_container"
            android:visibility="visible"
            android:orientation="horizontal"
            >

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/field_height_small"
                android:layout_height="@dimen/field_height_small"
                android:text="@string/icon_home"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/font_awesome_button_text_size"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="@string/home"
                android:id="@+id/tv_nav_home"
                android:textColor="#ffffff"

                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_drawer_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:id="@+id/create_new_project"
            android:visibility="visible"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/field_height_small"
                android:layout_height="@dimen/field_height_small"
                android:text="@string/icon_project"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/font_awesome_button_text_size"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="@string/create_new_project"
                android:textColor="#ffffff"
                android:id="@+id/tv_nav_create_project"

                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_drawer_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:id="@+id/container_create_child"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/field_height_small"
                android:layout_height="@dimen/field_height_small"
                android:text="@string/icon_plus"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/font_awesome_button_text_size"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_white"
                android:id="@+id/tv_create_child"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_drawer_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:id="@+id/container_list_of_child"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/field_height_small"
                android:layout_height="@dimen/field_height_small"
                android:text="@string/icon_list"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/font_awesome_button_text_size"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_list_of_child"
                android:textColor="@color/text_color_white"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_drawer_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:id="@+id/update_user_profile"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/field_height_small"
                android:layout_height="@dimen/field_height_small"
                android:text="@string/icon_update"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/font_awesome_button_text_size"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="@string/update_profile"
                android:textColor="@color/text_color_white"
                android:id="@+id/tv_update_user_profile"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_drawer_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:id="@+id/log_out"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/field_height_small"
                android:layout_height="@dimen/field_height_small"
                android:text="@string/icon_log_out"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/font_awesome_button_text_size"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="@string/log_out"
                android:textColor="@color/text_color_white"
                android:id="@+id/tv_nav_logout"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_drawer_divider"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_image_dim"
        android:id="@+id/header"
        app:cardBackgroundColor="@color/navigation_header_background"
        app:cardElevation="2dp"
        app:cardCornerRadius="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            >



            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:padding="@dimen/profile_image_padding"
                android:layout_width="@dimen/profile_image_dim"
                android:layout_height="match_parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/twenty_five_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_left"
                    android:id="@+id/tvDisplayName"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="@dimen/user_name_text_size"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCompanyName"
                    android:paddingStart="@dimen/padding_left"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/company_name_text_size"
                    android:textColor="@color/ash"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
