<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cpsdbd.sohelcon.DetailDialogFragmentLongPress.ShowDetailStoreConsumedDialog">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:textSize="18sp"
        android:id="@+id/title"
        android:text="@string/consumed_details"
        android:textColor="@color/text_color_white"
        android:gravity="center"/>

    <ScrollView
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="@dimen/table_data_padding"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/date"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="@string/date"/>

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:gravity="start"
                    android:layout_weight="2"
                    android:id="@+id/show_store_consumed_dialog_date"/>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/table_data_padding"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:id="@+id/particular"
                    android:text="@string/particular"/>

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/show_store_consumed_dialog_particular"/>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/table_data_padding"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/issue_to"
                    android:textColor="@color/black"
                    android:text="@string/issue_to"/>

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/show_store_consumed_dialog_issue_to"/>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/table_data_padding"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/where_used"
                    android:textColor="@color/black"
                    android:text="@string/where_used"/>

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/show_store_consumed_dialog_where_used"/>
            </LinearLayout>



            <LinearLayout
                android:padding="@dimen/table_data_padding"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:id="@+id/quantity"
                    android:textColor="@color/black"
                    android:text="@string/quantity_2"/>

                <com.cpsdbd.sohelcon.CustomView.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/show_store_consumed_dialog_quantity"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <RelativeLayout
        android:layout_below="@+id/scroll"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/show_store_consumed_dialog_ok"
            android:src="@drawable/ok"
            android:background="@drawable/image_button_back"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>

</RelativeLayout>
