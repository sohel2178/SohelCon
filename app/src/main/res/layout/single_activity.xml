<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/linear_layout_width"
    android:layout_marginBottom="1.5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/light_white"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:paddingLeft="@dimen/default_padding_left"
                android:paddingBottom="@dimen/default_padding"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:textSize="@dimen/my_text_size"
                android:id="@+id/single_activity_activity_name"
                android:gravity="center_vertical|start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/default_padding_left"
                android:paddingBottom="@dimen/default_padding"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:textSize="@dimen/my_text_size"
                android:id="@+id/single_activity_volume_of_works"
                android:gravity="center_vertical|start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/default_padding_left"
                android:paddingBottom="@dimen/default_padding"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:textSize="@dimen/my_text_size"
                android:id="@+id/single_activity_volume_of_workdone"
                android:gravity="center_vertical|start"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical">

                    <com.joanzapata.iconify.widget.IconButton
                        android:layout_alignParentStart="true"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="@string/icon_delete"
                        android:layout_gravity="center"
                        android:textColor="@color/text_color_white"
                        android:background="@drawable/red_button_selector"
                        android:id="@+id/single_activity_btn_delete"/>
                    <com.joanzapata.iconify.widget.IconButton
                        android:layout_centerInParent="true"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="@string/icon_update"
                        android:layout_gravity="center"
                        android:textColor="@color/text_color_white"
                        android:background="@drawable/control_button_selector"
                        android:id="@+id/single_activity_btn_update"/>

                    <com.joanzapata.iconify.widget.IconButton
                        android:layout_alignParentEnd="true"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="@string/icon_work_done"
                        android:layout_gravity="center"
                        android:textColor="@color/text_color_white"
                        android:background="@drawable/green_button_selector"
                        android:id="@+id/single_activity_btn_work_done"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>