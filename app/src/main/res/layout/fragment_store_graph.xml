<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.cpsdbd.sohelcon.Fragments.MainFragment.Store.StoreGraphFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_width"
            android:text="@string/icon_bar_chart_received"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_field"
            android:gravity="center"
            android:background="@color/facebook_color"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/graph_store_received">

            </FrameLayout>

        </android.support.v7.widget.CardView>

        <!--app:cardBackgroundColor="@color/chart_back"
        android:backgroundTint="@color/another_color"
        android:backgroundTintMode="multiply"-->



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_width"
            android:text="@string/icon_bar_chart_consumed"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_field"
            android:gravity="center"
            android:background="@color/facebook_color"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/graph_store_consumed">

            </FrameLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>





</LinearLayout>
